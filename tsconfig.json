{
  // "extends": "ts-config-single-spa",
  "include": ["lib/**/*"],
  "compilerOptions": {
    "strict": false,
    "jsx": "react",
    "target": "es2016",
    // "declaration": true,
    "baseUrl": "lib",
    "esModuleInterop": true,
    "paths": {
      "@mtfh/common/lib/*": ["*"]
    },
    // "paths": {
